{
  "plugins": ["lodash", "only-warn"],
  "extends": ["eslint:recommended", "plugin:lodash/recommended", "airbnb-base"],
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "jquery": true
  },
  "rules": {
    "no-console": "off",
    "lodash/preferred-alias": [2, {
      "ignoreMethods": ["each"]
    }]
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "settings": {
    "lodash": {
      "pragma": "_"
    },
    "import/resolver": {
      "webpack": {
        "config": "./webpack.config.js"
      },
      "alias": [
        ["libs", "./app-js/libs/"],
        ["store", "./app-js/store/"],
        ["root", "./app-js/"],
        ["components", "./app-components/"],
        ["vendor", "./vendor/"]
      ]
    }
  }
}
