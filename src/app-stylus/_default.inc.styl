html
  font-size 62.5% // 10px

body
  font-family mainFont
  font-size 1.6rem // 16px
  min-width 32rem
  line-height 1.2
  overflow-x hidden

button
  font-family inherit
  font-size inherit
  font-weight inherit
  background-color transparent
  border none
  cursor pointer
  padding 0
  noOutline()

a
  text-decoration none
  color inherit

img
  max-width 100%
  height auto

textarea
  resize none

[hidden]
  display none

.hidden
  opacity 0
  visibility hidden

#svg-sprite
  position absolute
  size(0)
